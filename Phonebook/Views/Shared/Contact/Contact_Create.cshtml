@model PhoneBookLib.Business.BContact
@using Repository.Business.Protocols
@using Mailbox.Helpers

@{Model.Format();}

@using(Html.BeginForm("Contact_Create", "Home", FormMethod.Post, 
    new{
        @id = "ContactCreate_" + Model.Contact_ID,
        @class = "ContactCreate PartialUpdateForm"
    })){
    @Model.Contact_ID_Rules.Create.HtmlInput(Model.Contact_ID)
    @Model.username_Rules.Create.HtmlInput(Model.username)
    @Model.First_Name_Rules.Create.HtmlInput(Model.First_Name)
    @Model.Last_Name_Rules.Create.HtmlInput(Model.Last_Name)
    @Model.Middle_Initial_Rules.Create.HtmlInput(Model.Middle_Initial)
    @Model.Relation_Rules.Create.HtmlInput(Model.Relation)
    
    <input type="submit" value="Create Contact" />
}